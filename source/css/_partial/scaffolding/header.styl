/*
 * header.styl
 */

.intro-header {
    position: relative;
    margin: auto;
    overflow: auto;
    background: linear-gradient(315deg, rgba(101,0,94,1) 3%, rgba(60,132,206,1) 38%, rgba(48,238,226,1) 68%, oklch(0.488 0.243 264.376) 98%);
    animation: gradient 15s ease infinite;
    background-size: 400% 400%;
    background-attachment: fixed;

    @keyframes gradient {
        0% {
            background-position: 0% 0%;
        }
        50% {
            background-position: 100% 100%;
        }
        100% {
            background-position: 0% 0%;
        }
    }

    @keyframes wave {
        2% {
            transform: translateX(1);
        }

        25% {
            transform: translateX(-25%);
        }

        50% {
            transform: translateX(-50%);
        }

        75% {
            transform: translateX(-25%);
        }

        100% {
            transform: translateX(1);
        }
    }

    .site-heading, .post-heading {
        padding: 150px 0;
    }

    .site-heading {
        h1 {
            margin-top: 0;
            font-size: 80px;
        }
        .subheading {
            sans-serif();
            font-weight: 300;
            font-size: 24px;
            line-height: 1.1;
            margin: 10px 0 0;
        }
    }

    .post-heading {
        h1 {
            font-size: 55px;
            
            .subheading {
                line-height: 1.1;
            }
        }

        .subheading {
            sans-serif();
            font-weight: 600;
            font-size: 30px;
            margin: 10px 0 30px;
        }
    }
}
